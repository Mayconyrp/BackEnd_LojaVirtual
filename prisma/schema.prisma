generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int        @id @default(autoincrement())
  cpf          String     @unique
  email        String     @unique
  name         String?
  senha        String
  type_user    UserType
  criadoEm     DateTime   @default(now())
  atualizadoEm DateTime   @updatedAt
  enderecos    Endereco[]
  compras      Compra[]
}

enum UserType {
  Admin
  User
}

model Endereco {
  id          Int     @id @default(autoincrement())
  cep         String
  cidade      String
  estado      String
  rua         String
  numero      String
  complemento String
  usuarioId   Int
  Usuario     Usuario @relation(fields: [usuarioId], references: [id])
}

model Categoria {
  id       Int       @id @default(autoincrement())
  nome     String
  produtos Produto[]
}

model Produto {
  id         Int     @id @default(autoincrement())
  imagem     String
  nome       String
  descricao  String?
  preco      Float
  cor        String?
  estoque    Int
  disponivel Boolean
  height     Int  @default(0)
  width      Int  @default(0)
  length     Int  @default(0)
  weight     Int  @default(0)

  categoriaId Int
  Categoria   Categoria @relation(fields: [categoriaId], references: [id])

  compras Compra[]
}

model Compra {
  id                Int       @id @default(autoincrement())
  notaFiscal        String    // Número da nota fiscal
  tipoPagamento     String    // Tipo de pagamento (e.g., "Cartão", "Boleto")
  produtoId         Int
  Produto           Produto   @relation(fields: [produtoId], references: [id])
  usuarioId         Int
  Usuario           Usuario   @relation(fields: [usuarioId], references: [id])
  dataCompra        DateTime  @default(now())
  
  nomeTransportadora String?  
  precoFrete         Float?   
  tempoEntrega       String?  
  empresaFrete       String?  
  logoTransportadora String?  
}
